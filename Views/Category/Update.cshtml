@model LTUD.Controllers.CategoryViewModel
<h1>Chỉnh sửa sản phẩm</h1>
<div class="align-content-center">
    <!-- This is the form for updating a category -->
    <form class="row g-3" asp-action="Update" method="post">
        <input id="IdCategory" type="hidden" asp-for="Request.Id" value="@Model.Respone.Id"/>
        <div class="col-md-6">
            <label for="nameCategory" class="form-label">Tên danh mục</label>
            <input type="text" class="form-control" id="nameCategory" asp-for="Request.Name" value="@Model.Respone.Name" />
        </div>
        <div class="col-12">
            <a asp-action="Index" asp-controller="Category"><button asp-action="Index" asp-controller="Category" type="button" class="btn btn-secondary"><i class="fa-solid fa-rotate-left"></i> Quay lại</button></a>
            <button type="submit" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Lưu</button>
        </div>
        @if (ViewData["message"] != null)
        {
            <div class="mb-3 alert-danger">
                @ViewData["message"]
            </div>
        }

    </form>
</div>